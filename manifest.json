{
    "manifest_version": 2,
    "name": "Evolve Idle Automation",
    "version": "0.2.0",
    "description": "Adds unlockable automations to Evolve Idle",
    "icons": {
        "48": "icons/border-48.png",
        "96": "icons/border-96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://pmotschmann.github.io/Evolve/*"
            ],
            "js": [
                "dist/bundle.js"
            ]
        },
        {
            "matches": [
                "*://pmotschmann.github.io/Evolve/*"
            ],
            "css": [
                "css/styles.css",
                "css/icons.css"
            ],
            "run_at": "document_start"
        }
    ]
}